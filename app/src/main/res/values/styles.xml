<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <!-- untuk mengganti warna icon di toolbar menjadi putih, seperti searchview -->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPaddingBottom">0dp</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="contentPaddingLeft">0dp</item>
        <item name="contentPaddingRight">0dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>

    <style name="MyCardViewStyle2" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">25dp</item>
        <item name="contentPaddingRight">10dp</item>
        <item name="cardBackgroundColor">#cca1adc4</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/century_gothic_bold</item>
    </style>

</resources>
